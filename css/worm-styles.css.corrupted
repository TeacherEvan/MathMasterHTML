.worm-container:hover {
    filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 1)) drop-shadow(0 0 15px rgba(0, 255, 0, 1));
    transform: scale(1.1);
}

.worm-container.flickering {
    animation: lsd-flicker 0.3s linear infinite;
    filter: drop-shadow(0 3px 8px rgba(0, 0, 0, 0.9)) drop-shadow(0 0 20px rgba(255, 0, 255, 1));
}

/* LSD Color Flicker Animation */
@keyframes lsd-flicker {
    0% {
        filter:
            drop-shadow(0 3px 8px rgba(255, 0, 0, 0.9)) drop-shadow(0 0 20px rgba(255, 0, 0, 1)) hue-rotate(0deg);
    }

    14% {
        filter:
            drop-shadow(0 3px 8px rgba(255, 165, 0, 0.9)) drop-shadow(0 0 20px rgba(255, 165, 0, 1)) hue-rotate(60deg);
    }

    28% {
        filter:
            drop-shadow(0 3px 8px rgba(255, 255, 0, 0.9)) drop-shadow(0 0 20px rgba(255, 255, 0, 1)) hue-rotate(120deg);
    }

    42% {
        filter:
            drop-shadow(0 3px 8px rgba(0, 255, 0, 0.9)) drop-shadow(0 0 20px rgba(0, 255, 0, 1)) hue-rotate(180deg);
    }

    57% {
        filter:
            drop-shadow(0 3px 8px rgba(0, 0, 255, 0.9)) drop-shadow(0 0 20px rgba(0, 0, 255, 1)) hue-rotate(240deg);
    }

    71% {
        filter:
            drop-shadow(0 3px 8px rgba(75, 0, 130, 0.9)) drop-shadow(0 0 20px rgba(75, 0, 130, 1)) hue-rotate(300deg);
    }

    85% {
        filter:
            drop-shadow(0 3px 8px rgba(238, 130, 238, 0.9)) drop-shadow(0 0 20px rgba(238, 130, 238, 1)) hue-rotate(330deg);
    }

    100% {
        filter:
            drop-shadow(0 3px 8px rgba(255, 0, 0, 0.9)) drop-shadow(0 0 20px rgba(255, 0, 0, 1)) hue-rotate(360deg);
    }
}

.worm-body {
    display: flex;
    align-items: center;
}

.worm-segment {
    width: 9px;
    /* 50% of original 18px quarter-coin size */
    height: 9px;
    background: radial-gradient(circle at 30% 30%, #00ff00, #00ee00, #00cc00);
    /* Brighter green */
    border: 1px solid #00ff00;
    /* Reduced from 2px */
    border-radius: 50%;
    margin-left: -2px;
    /* Reduced from -4px */
    animation: worm-crawl 0.8s ease-in-out infinite;
    animation-delay: calc(var(--segment-index, 0) * 0.15s);
    position: relative;
    box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.4),
        0 1px 2px rgba(0, 0, 0, 0.8),
        0 0 4px rgba(0, 255, 0, 0.6);
    opacity: 1 !important;
}

.worm-segment:first-child {
    --segment-index: 0;
    width: 12px;
    /* 50% of original 24px - head slightly larger */
    height: 12px;
    background: radial-gradient(circle at 30% 30%, #00ff66, #00ee44, #00cc33);
    /* Brighter green head */
    border: 1.5px solid #00ff00;
    /* Reduced from 3px */
    box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.5),
        0 1px 3px rgba(0, 0, 0, 0.9),
        0 0 6px rgba(0, 255, 0, 0.8);
    opacity: 1 !important;
}

/* Worm eyes on first segment (head) */
.worm-segment:first-child::before,
.worm-segment:first-child::after {
    content: '';
    position: absolute;
    width: 2px;
    /* Reduced from 4px */
    height: 2px;
    background: #000;
    border-radius: 50%;
    top: 3px;
    /* Adjusted from 6px */
    animation: worm-blink 3s ease-in-out infinite;
}

.worm-segment:first-child::before {
    left: 2.5px;
    /* Adjusted from 5px */
}

.worm-segment:first-child::after {
    right: 2.5px;
    /* Adjusted from 5px */
}

@keyframes worm-blink {

    0%,
    90%,
    100% {
        height: 2px;
        /* Reduced from 4px */
        opacity: 1;
    }

    92%,
    98% {
        height: 0.5px;
        /* Reduced from 1px */
        opacity: 0.3;
    }
}

@keyframes worm-wiggle {
    0% {
        transform: translateY(0) scaleY(1);
    }

    25% {
        transform: translateY(-1px) scaleY(1.1);
    }

    50% {
        transform: translateY(0) scaleY(0.95);
    }

    75% {
        transform: translateY(1px) scaleY(1.05);
    }

    100% {
        transform: translateY(0) scaleY(1);
    }
}

/* Crawling animation - creates inchworm-like movement */
@keyframes worm-crawl {
    0% {
        transform: translateY(0) scaleX(1);
    }

    25% {
        transform: translateY(-2px) scaleX(1.15);
    }

    50% {
        transform: translateY(0) scaleX(0.9);
    }

    75% {
        transform: translateY(2px) scaleX(1.1);
    }

    100% {
        transform: translateY(0) scaleX(1);
    }
}

/* Carrying state - worm has a symbol */
.worm-container.carrying {
    animation: worm-bounce 0.6s ease-in-out infinite;
}

@keyframes worm-bounce {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-3px);
    }
}

/* Clicked state - visual feedback with improved explosion */
.worm-container.worm-clicked {
    animation: worm-explode 0.5s cubic-bezier(0.36, 0, 0.66, -0.56) forwards;
}

@keyframes worm-explode {
    0% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
        filter: drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    }

    20% {
        transform: scale(1.4) rotate(15deg);
        opacity: 1;
        filter:
            drop-shadow(0 0 20px rgba(255, 255, 0, 1)) drop-shadow(0 0 30px rgba(255, 165, 0, 1));
    }

    40% {
        transform: scale(1.8) rotate(-10deg);
        opacity: 0.8;
        filter:
            drop-shadow(0 0 30px rgba(255, 0, 0, 1)) drop-shadow(0 0 40px rgba(255, 100, 0, 1));
    }

    60% {
        transform: scale(0.6) rotate(20deg);
        opacity: 0.5;
        filter: drop-shadow(0 0 15px rgba(100, 100, 100, 0.5));
    }

    100% {
        transform: scale(0.1) rotate(45deg);
        opacity: 0;
        filter: none;
    }
}

/* Worm explosion crack mark */
.worm-crack {
    position: absolute;
    width: 40px;
    height: 40px;
    pointer-events: none;
    z-index: 9999;
    opacity: 0;
    animation: crack-appear 0.3s ease-out forwards;
}

.worm-crack::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg,
            transparent 0%,
            rgba(100, 100, 100, 0.8) 10%,
            rgba(80, 80, 80, 0.9) 50%,
            rgba(100, 100, 100, 0.8) 90%,
            transparent 100%);
    transform: translate(-50%, -50%) rotate(45deg);
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.5);
}

.worm-crack::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg,
            transparent 0%,
            rgba(100, 100, 100, 0.8) 10%,
            rgba(80, 80, 80, 0.9) 50%,
            rgba(100, 100, 100, 0.8) 90%,
            transparent 100%);
    transform: translate(-50%, -50%) rotate(-45deg);
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.5);
}

@keyframes crack-appear {
    0% {
        opacity: 0;
        transform: scale(0.5) rotate(0deg);
    }

    50% {
        opacity: 1;
        transform: scale(1.2) rotate(10deg);
    }

    100% {
        opacity: 0.7;
        transform: scale(1) rotate(0deg);
    }
}

/* Stolen symbol appearance */
.stolen {
    opacity: 0.3 !important;
    text-decoration: line-through;
    color: #666 !important;
    text-shadow: none !important;
    animation: stolen-fade 0.5s ease-out;
}

@keyframes stolen-fade {
    from {
        opacity: 1;
        transform: scale(1);
    }

    to {
        opacity: 0.3;
        transform: scale(0.9);
    }
}

/* Symbol return animation when worm is clicked */
@keyframes symbol-return {
    0% {
        transform: scale(0.5) translateY(-20px);
        opacity: 0;
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
}

/* Symbol being carried by worm */
.carried-symbol {
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(145deg, #ff0000, #ff6666);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    font-family: 'Orbitron', monospace;
    border: 2px solid #ff0000;
    box-shadow: 0 0 12px rgba(255, 0, 0, 0.8);
    animation: symbol-glow 1s ease-in-out infinite;
    z-index: 101;
    pointer-events: none;
}

@keyframes symbol-glow {

    0%,
    100% {
        box-shadow: 0 0 12px rgba(255, 0, 0, 0.8);
        text-shadow: 0 0 8px rgba(255, 0, 0, 0.6);
    }

    50% {
        box-shadow: 0 0 20px rgba(255, 0, 0, 1);
        text-shadow: 0 0 12px rgba(255, 0, 0, 0.8);
    }
}

/* Worm multiplication effect */
.worm-multiply {
    animation: worm-multiply 0.5s ease-out !important;
}

@keyframes worm-multiply {
    0% {
        transform: scale(1);
        filter: drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    }

    50% {
        transform: scale(1.5);
        filter: drop-shadow(0 0 30px rgba(0, 255, 0, 1)) drop-shadow(0 0 40px rgba(255, 255, 0, 1));
    }

    100% {
        transform: scale(1);
        filter: drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    }
}

/* Worm flash effect when max worms reached */
@keyframes worm-flash {

    0%,
    100% {
        filter: drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    }

    25% {
        filter: drop-shadow(0 0 20px rgba(255, 0, 0, 1));
    }

    50% {
        filter: drop-shadow(0 0 20px rgba(255, 255, 0, 1));
    }

    75% {
        filter: drop-shadow(0 0 20px rgba(255, 0, 0, 1));
    }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .worm-segment {
        width: 8px;
        /* 50% of original 16px */
        height: 8px;
    }

    .worm-segment:first-child {
        width: 10px;
        /* 50% of original 20px */
        height: 10px;
    }

    .carried-symbol {
        font-size: 12px;
        /* Slightly smaller */
        padding: 2px 4px;
    }
}

@media (max-width: 480px) {
    .worm-segment {
        width: 7px;
        /* 50% of original 14px */
        height: 7px;
    }

    .worm-segment:first-child {
        width: 9px;
        /* 50% of original 18px */
        height: 9px;
    }

    .carried-symbol {
        font-size: 10px;
        /* Smaller for mobile */
        padding: 1px 3px;
    }
}

    100% {
        opacity: 0;
    }
}
.worm-exploding {
    animation: worm-explosion-scale 0.5s ease-out forwards !important;
}

@keyframes worm-explosion-scale {
    0% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
    }

    50% {
        transform: scale(2.5) rotate(180deg);
        opacity: 0.8;
        filter: drop-shadow(0 0 40px rgba(255, 255, 0, 1)) drop-shadow(0 0 60px rgba(255, 0, 0, 1)) !important;
    }

    100% {
        transform: scale(0.1) rotate(360deg);
        opacity: 0;
    }
}

.explosion-particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: radial-gradient(circle, #ffff00, #ff6600, #ff0000);
    border-radius: 50%;
    pointer-events: none;
    animation: particle-burst 0.6s ease-out forwards;
    box-shadow: 0 0 10px rgba(255, 255, 0, 1), 0 0 20px rgba(255, 100, 0, 0.8);
    z-index: 10001;
}

@keyframes particle-burst {
    0% {
        transform: translate(0, 0) scale(1);
        opacity: 1;
    }

    50% {
        transform: translate(calc(var(--angle-x) * 0.5), calc(var(--angle-y) * 0.5)) scale(1.5);
        opacity: 0.8;
    }

    100% {
        transform: translate(calc(var(--angle-x) * 1px), calc(var(--angle-y) * 1px)) scale(0.3);
        opacity: 0;
    }
}

.explosion-flash {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.8), rgba(255, 200, 0, 0.4), transparent);
    pointer-events: none;
    z-index: 9998;
    animation: flash-fade 0.2s ease-out forwards;
}

@keyframes flash-fade {
    0% {
        opacity: 0;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

