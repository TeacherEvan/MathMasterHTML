/* Worm System Styles - Quarter-coin sized green worms with LSD flicker */

.worm-container {
    position: absolute;
    display: flex;
    align-items: center;
    z-index: 10000 !important;
    /* MAXIMUM z-index - worms MUST be in front of everything */
    cursor: pointer;
    /* NO transition property to prevent floating effect */
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.9)) drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    opacity: 1 !important;
    visibility: visible !important;
    pointer-events: auto !important;
}

/* Flash effect for worm explosion */
.worm-flash {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 255, 0, 0.3);
    pointer-events: none;
    z-index: 9998;
    animation: flash-fade 0.2s ease-out forwards;
}

@keyframes flash-fade {
    0% {
        opacity: 0;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

/* SLIME SPLAT EFFECT - Green worm death mark */
.slime-splat {
    position: absolute;
    width: 60px;
    height: 60px;
    pointer-events: none;
    z-index: 9997;
    opacity: 0;
    animation: splat-appear 0.3s ease-out forwards;
}

/* Main splat body */
.slime-splat::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 40% 40%,
            rgba(0, 255, 0, 0.8) 0%,
            rgba(0, 220, 0, 0.7) 20%,
            rgba(0, 180, 0, 0.6) 40%,
            rgba(0, 140, 0, 0.4) 70%,
            transparent 100%);
    border-radius: 50% 40% 45% 55% / 55% 50% 45% 50%;
    filter: blur(1px);
}

/* Splat drips */
.slime-splat::after {
    content: '';
    position: absolute;
    top: 60%;
    left: 30%;
    width: 12px;
    height: 20px;
    background: linear-gradient(180deg,
            rgba(0, 200, 0, 0.7) 0%,
            rgba(0, 180, 0, 0.5) 50%,
            transparent 100%);
    border-radius: 0 0 50% 50%;
    filter: blur(0.5px);
}

@keyframes splat-appear {
    0% {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.3);
    }

    20% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1.3);
    }

    100% {
        opacity: 0.8;
        transform: translate(-50%, -50%) scale(1);
    }
}

/* Fade out animation */
.slime-fading {
    animation: splat-fade 1s ease-out forwards;
}

@keyframes splat-fade {
    from {
        opacity: 0.8;
    }

    to {
        opacity: 0;
    }
}

