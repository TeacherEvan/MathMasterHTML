{
    "name": "mathmaster-html",
    "version": "1.0.0",
    "description": "Educational math game with Matrix-themed UI where players solve algebra equations by clicking falling symbols",
    "type": "module",
    "scripts": {
        "start": "npx http-server -p 8000 -c-1 --cors",
        "lint": "eslint js/",
        "lint:fix": "eslint js/ --fix",
        "verify": "node scripts/verify.js",
        "verify:quick": "npm run lint && echo 'âœ… Lint passed!'",
        "test": "npx playwright test",
        "test:ui": "npx playwright test --ui",
        "test:headed": "npx playwright test --headed",
        "test:report": "npx playwright show-report",
        "test:manual": "echo 'Open http://localhost:8000/game.html?level=beginner and press P to view performance monitor'"
    },
    "keywords": [
        "math",
        "education",
        "game",
        "matrix",
        "algebra"
    ],
    "author": "TeacherEvan",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TeacherEvan/MathMasterHTML"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@playwright/test": "^1.57.0",
        "eslint": "^9.15.0",
        "globals": "^15.12.0"
    },
    "optionalDependencies": {
        "http-server": "^14.1.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}